@model WhatsAppAdmin.Controllers.EditAdminUserViewModel

@{
    ViewData["Title"] = "Edit Admin User";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Edit Admin User</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    @Html.HiddenFor(model => model.Id)
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" type="email" readonly />
                        <div class="form-text">Email cannot be changed after creation.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Current Role</label>
                        <input value="@Model.CurrentRole" class="form-control" readonly />
                    </div>

                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <div class="mb-3">
                            <label asp-for="NewRole" class="form-label">New Role</label>
                            <select asp-for="NewRole" class="form-select">
                                <option value="">Keep current role...</option>
                                @foreach (var role in ViewBag.Roles as List<string>)
                                {
                                    <option value="@role" selected="@(role == Model.CurrentRole)">@role</option>
                                }
                            </select>
                            <div class="form-text">Leave empty to keep the current role.</div>
                        </div>
                    }

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                Is Active
                            </label>
                        </div>
                        <div class="form-text">Inactive users cannot log in to the system.</div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Update Admin User
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">User Information</h6>
            </div>
            <div class="card-body">
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Current Role:</strong> <span class="badge bg-primary">@Model.CurrentRole</span></p>
                <p><strong>Status:</strong>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </p>
            </div>
        </div>

        @if (User.IsInRole("SuperAdmin") && !Model.CurrentRole.Equals("SuperAdmin"))
        {
            <div class="card mt-3">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0">Danger Zone</h6>
                </div>
                <div class="card-body">
                    <p class="card-text">Once you delete this admin user, there is no going back. Please be certain.</p>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this admin user? This action cannot be undone.')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash me-2"></i>Delete Admin User
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}