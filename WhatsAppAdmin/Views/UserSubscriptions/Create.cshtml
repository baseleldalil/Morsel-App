@model UserSubscription

@{
    ViewData["Title"] = "Assign User Subscription";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Assign User to Subscription</h4>
            </div>
            <div class="card-body">
                @* Success Message *@
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @* Error Messages *@
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="UserEmail" class="form-label">User Email</label>
                        <input asp-for="UserEmail" class="form-control" type="email" placeholder="user@example.com" />
                        <span asp-validation-for="UserEmail" class="text-danger"></span>
                        <div class="form-text">User ID will be auto-generated for new users.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            Password
                            <span class="badge bg-info text-dark">Required for new users</span>
                        </label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Set user password (min 6 characters)" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            <strong>Required</strong> when creating a new user. Leave empty to keep existing user's password unchanged.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SubscriptionId" class="form-label">Subscription Plan</label>
                        <select asp-for="SubscriptionId" class="form-select" id="subscriptionSelect">
                            <option value="">Select a subscription plan...</option>
                            @if (ViewBag.Subscriptions != null)
                            {
                                @foreach (var subscription in (IEnumerable<Subscription>)ViewBag.Subscriptions)
                                {
                                    <option value="@subscription.Id"
                                            data-price="@subscription.Price"
                                            data-messages="@subscription.MaxMessagesPerDay"
                                            data-description="@subscription.Description">
                                        @subscription.Name - $@subscription.Price.ToString("F2") (@subscription.MaxMessagesPerDay msgs/day)
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="SubscriptionId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ExpiresAt" class="form-label">Expiry Date (Optional)</label>
                                <input asp-for="ExpiresAt" class="form-control" type="datetime-local" />
                                <span asp-validation-for="ExpiresAt" class="text-danger"></span>
                                <div class="form-text">Leave empty for no expiry date.</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Is Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Assign Subscription
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Subscription Details</h6>
            </div>
            <div class="card-body" id="subscriptionDetails">
                <p class="text-muted">Select a subscription to view details...</p>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Important Notes</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="bi bi-person-plus text-success me-2"></i>
                        <strong>Auto-Create:</strong> New users are created automatically with a unique ID
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-hash text-info me-2"></i>
                        <strong>User ID:</strong> Auto-increment by database (1, 2, 3, ...)
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-key text-primary me-2"></i>
                        <strong>Password:</strong> Required for new users, optional for existing users
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                        <strong>Unique:</strong> Only one active subscription per user is allowed
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-clock text-muted me-2"></i>
                        <strong>Reset:</strong> Message counts reset daily at midnight UTC
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const subscriptionSelect = document.getElementById('subscriptionSelect');
            const subscriptionDetails = document.getElementById('subscriptionDetails');

            subscriptionSelect.addEventListener('change', function() {
                const selectedOption = this.options[this.selectedIndex];

                if (selectedOption.value) {
                    const price = selectedOption.getAttribute('data-price');
                    const messages = selectedOption.getAttribute('data-messages');
                    const description = selectedOption.getAttribute('data-description');

                    subscriptionDetails.innerHTML = `
                        <h6>${selectedOption.text.split(' - ')[0]}</h6>
                        <p><strong>Price:</strong> $${price}</p>
                        <p><strong>Daily Messages:</strong> ${messages}</p>
                        ${description ? `<p><strong>Description:</strong> ${description}</p>` : ''}
                        <div class="mt-3">
                            <small class="text-muted">
                                This user will be able to send up to ${messages} messages per day.
                            </small>
                        </div>
                    `;
                } else {
                    subscriptionDetails.innerHTML = '<p class="text-muted">Select a subscription to view details...</p>';
                }
            });

            // Set minimum date to current date
            const expiryInput = document.getElementById('ExpiresAt');
            if (expiryInput) {
                const now = new Date();
                const minDateTime = now.toISOString().slice(0, 16);
                expiryInput.min = minDateTime;
            }
        });
    </script>
}