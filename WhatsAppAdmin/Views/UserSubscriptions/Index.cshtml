@model IEnumerable<UserSubscription>

@{
    ViewData["Title"] = "User Subscriptions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>User Subscription Assignments</h2>
    <div>
        <a asp-action="Create" class="btn btn-primary me-2">
            <i class="bi bi-plus-circle me-2"></i>Assign User
        </a>
        <form asp-action="ResetDailyCounts" method="post" style="display: inline;">
            <button type="submit" class="btn btn-outline-warning" onclick="return confirm('Are you sure you want to reset daily message counts for all users?')">
                <i class="bi bi-arrow-clockwise me-2"></i>Reset Daily Counts
            </button>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>User</th>
                            <th>Subscription</th>
                            <th>Usage Today</th>
                            <th>Status</th>
                            <th>Assigned Date</th>
                            <th>Expires</th>
                            <th>Last Message</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userSub in Model)
                        {
                            <tr class="@(!userSub.IsActive ? "table-secondary" : "")">
                                <td>
                                    <strong>@userSub.UserEmail</strong>
                                    <br><small class="text-muted">ID: @userSub.UserId</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@userSub.Subscription.Name</span>
                                    <br><small class="text-muted">$@userSub.Subscription.Price.ToString("F2")</small>
                                </td>
                                <td>
                                    @{
                                        var percentage = userSub.Subscription.MaxMessagesPerDay > 0
                                            ? (double)userSub.MessagesUsedToday / userSub.Subscription.MaxMessagesPerDay * 100
                                            : 0;
                                        var progressClass = percentage >= 90 ? "bg-danger" : percentage >= 70 ? "bg-warning" : "bg-success";
                                    }
                                    <div class="progress mb-1" style="height: 20px;">
                                        <div class="progress-bar @progressClass" style="width: @percentage%">
                                            @userSub.MessagesUsedToday / @userSub.Subscription.MaxMessagesPerDay
                                        </div>
                                    </div>
                                    <small class="text-muted">@percentage.ToString("F1")% used</small>
                                </td>
                                <td>
                                    @if (userSub.IsActive)
                                    {
                                        @if (userSub.ExpiresAt.HasValue && userSub.ExpiresAt.Value <= DateTime.UtcNow)
                                        {
                                            <span class="badge bg-danger">Expired</span>
                                        }
                                        else if (userSub.ExpiresAt.HasValue && userSub.ExpiresAt.Value <= DateTime.UtcNow.AddDays(7))
                                        {
                                            <span class="badge bg-warning">Expiring Soon</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    @userSub.AssignedAt.ToString("MMM dd, yyyy")
                                    <br><small class="text-muted">@userSub.AssignedAt.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @if (userSub.ExpiresAt.HasValue)
                                    {
                                        @userSub.ExpiresAt.Value.ToString("MMM dd, yyyy")
                                        <br><small class="text-muted">@userSub.ExpiresAt.Value.ToString("HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No expiry</span>
                                    }
                                </td>
                                <td>
                                    @if (userSub.LastMessageSentAt != default(DateTime))
                                    {
                                        @userSub.LastMessageSentAt.ToString("MMM dd, yyyy")
                                        <br><small class="text-muted">@userSub.LastMessageSentAt.ToString("HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@userSub.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@userSub.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@userSub.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                <h4 class="text-muted mt-3">No user subscriptions found</h4>
                <p class="text-muted">Assign users to subscriptions to get started.</p>
                <a asp-action="Create" class="btn btn-primary">Assign User</a>
            </div>
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">@Model.Count(us => us.IsActive)</h5>
                <p class="card-text">Active Subscriptions</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">@Model.Count(us => us.ExpiresAt.HasValue && us.ExpiresAt.Value <= DateTime.UtcNow.AddDays(7))</h5>
                <p class="card-text">Expiring Soon</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">@Model.Sum(us => us.MessagesUsedToday)</h5>
                <p class="card-text">Messages Today</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">@Model.Where(us => us.IsActive).Sum(us => us.Subscription.MaxMessagesPerDay)</h5>
                <p class="card-text">Daily Limit</p>
            </div>
        </div>
    </div>
</div>