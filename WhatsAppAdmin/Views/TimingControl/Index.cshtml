@{
    ViewData["Title"] = "Timing Control";
    var messageTimingControls = ViewBag.MessageTimingControls as IEnumerable<WhatsApp.Shared.Models.MessageTimingControl>;
    var randomDelayRules = ViewBag.RandomDelayRules as IEnumerable<WhatsApp.Shared.Models.RandomDelayRule>;
    var videoTimingControls = ViewBag.VideoTimingControls as IEnumerable<WhatsApp.Shared.Models.VideoTimingControl>;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Timing Control</strong> - Configure message delays, random pause rules, and video-specific timing to simulate natural human behavior and avoid spam detection.
            </div>
        </div>
    </div>

    <!-- Bootstrap Tabs Navigation -->
    <ul class="nav nav-tabs" id="timingTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="message-timing-tab" data-bs-toggle="tab" data-bs-target="#message-timing" type="button" role="tab">
                <i class="bi bi-clock me-2"></i>Message Timing
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="random-delays-tab" data-bs-toggle="tab" data-bs-target="#random-delays" type="button" role="tab">
                <i class="bi bi-shuffle me-2"></i>Random Delays
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="video-timing-tab" data-bs-toggle="tab" data-bs-target="#video-timing" type="button" role="tab">
                <i class="bi bi-camera-video me-2"></i>Video Timing
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content mt-3" id="timingTabContent">

        <!-- Message Timing Tab -->
        <div class="tab-pane fade show active" id="message-timing" role="tabpanel">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Add Message Timing</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="CreateMessageTiming" method="post">
                                @Html.AntiForgeryToken()
                                <div class="mb-3">
                                    <label class="form-label">Configuration Name</label>
                                    <input type="text" name="Name" class="form-control" required placeholder="e.g., Default Timing" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Min Delay (seconds)</label>
                                    <input type="number" name="MinDelaySeconds" class="form-control" required min="0" max="3600" value="1" />
                                    <small class="text-muted">0-3600 seconds</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Max Delay (seconds)</label>
                                    <input type="number" name="MaxDelaySeconds" class="form-control" required min="0" max="3600" value="3" />
                                    <small class="text-muted">0-3600 seconds</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea name="Description" class="form-control" rows="2" placeholder="Optional description"></textarea>
                                </div>
                                <div class="form-check mb-3">
                                    <input type="hidden" name="IsActive" value="false" />
                                    <input type="checkbox" name="IsActive" class="form-check-input" value="true" checked />
                                    <label class="form-check-label">Active</label>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-plus-circle me-2"></i>Create
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Message Timing Controls</h5>
                        </div>
                        <div class="card-body">
                            @if (messageTimingControls?.Any() == true)
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Min Delay</th>
                                                <th>Max Delay</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var control in messageTimingControls)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@control.Name</strong>
                                                        @if (!string.IsNullOrEmpty(control.Description))
                                                        {
                                                            <br/><small class="text-muted">@control.Description</small>
                                                        }
                                                    </td>
                                                    <td>@control.MinDelaySeconds s</td>
                                                    <td>@control.MaxDelaySeconds s</td>
                                                    <td>
                                                        @if (control.IsActive)
                                                        {
                                                            <span class="badge bg-success">Active</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">Inactive</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editMessageModal@(control.Id)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <form asp-action="DeleteMessageTiming" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this timing control?');">
                                                            <input type="hidden" name="id" value="@control.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>

                                                <!-- Edit Modal -->
                                                <div class="modal fade" id="editMessageModal@(control.Id)" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Edit Message Timing</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <form asp-action="UpdateMessageTiming" method="post">
                                                                <div class="modal-body">
                                                                    <input type="hidden" name="Id" value="@control.Id" />
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Name</label>
                                                                        <input type="text" name="Name" class="form-control" value="@control.Name" required />
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Min Delay (seconds)</label>
                                                                        <input type="number" name="MinDelaySeconds" class="form-control" value="@control.MinDelaySeconds" required min="0" max="3600" />
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Max Delay (seconds)</label>
                                                                        <input type="number" name="MaxDelaySeconds" class="form-control" value="@control.MaxDelaySeconds" required min="0" max="3600" />
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Description</label>
                                                                        <textarea name="Description" class="form-control" rows="2">@control.Description</textarea>
                                                                    </div>
                                                                    <div class="form-check">
                                                                        <input type="checkbox" name="IsActive" class="form-check-input" @(control.IsActive ? "checked" : "") />
                                                                        <label class="form-check-label">Active</label>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No message timing controls configured yet.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Random Delays Tab -->
        <div class="tab-pane fade" id="random-delays" role="tabpanel">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">Add Random Delay Rule</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="CreateRandomDelay" method="post">
                                @Html.AntiForgeryToken()
                                <div class="mb-3">
                                    <label class="form-label">Rule Name</label>
                                    <input type="text" name="Name" class="form-control" required placeholder="e.g., After 14 msgs pause" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">After Message Count</label>
                                    <input type="number" name="AfterMessageCount" class="form-control" required min="1" value="14" />
                                    <small class="text-muted">Use irregular numbers like 14, 17, 23...</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Pause Duration (minutes)</label>
                                    <input type="number" name="PauseDurationMinutes" class="form-control" required min="1" value="4" />
                                    <small class="text-muted">Use broken numbers like 4, 9, 13...</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Random Variance (seconds)</label>
                                    <input type="number" name="RandomVarianceSeconds" class="form-control" min="0" max="60" value="0" />
                                    <small class="text-muted">±variance for natural behavior</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Priority</label>
                                    <input type="number" name="Priority" class="form-control" min="1" max="100" value="10" />
                                    <small class="text-muted">Lower number = higher priority</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea name="Description" class="form-control" rows="2" placeholder="Optional description"></textarea>
                                </div>
                                <div class="form-check mb-3">
                                    <input type="hidden" name="IsActive" value="false" />
                                    <input type="checkbox" name="IsActive" class="form-check-input" value="true" checked />
                                    <label class="form-check-label">Active</label>
                                </div>
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="bi bi-plus-circle me-2"></i>Create Rule
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">Example Rules</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0 small">
                                <li><i class="bi bi-arrow-right me-2"></i>After 14 msgs → pause 4 mins</li>
                                <li><i class="bi bi-arrow-right me-2"></i>After 17 msgs → pause 9 mins</li>
                                <li><i class="bi bi-arrow-right me-2"></i>After 23 msgs → pause 13 mins</li>
                                <li><i class="bi bi-arrow-right me-2"></i>After 31 msgs → pause 7 mins</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Random Delay Rules</h5>
                        </div>
                        <div class="card-body">
                            @if (randomDelayRules?.Any() == true)
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Rule Name</th>
                                                <th>After Messages</th>
                                                <th>Pause Duration</th>
                                                <th>Variance</th>
                                                <th>Priority</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var rule in randomDelayRules)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@rule.Name</strong>
                                                        @if (!string.IsNullOrEmpty(rule.Description))
                                                        {
                                                            <br/><small class="text-muted">@rule.Description</small>
                                                        }
                                                    </td>
                                                    <td>@rule.AfterMessageCount</td>
                                                    <td>@rule.PauseDurationMinutes min</td>
                                                    <td>±@rule.RandomVarianceSeconds s</td>
                                                    <td>
                                                        <span class="badge bg-secondary">@rule.Priority</span>
                                                    </td>
                                                    <td>
                                                        @if (rule.IsActive)
                                                        {
                                                            <span class="badge bg-success">Active</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">Inactive</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editRandomModal@(rule.Id)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <form asp-action="DeleteRandomDelay" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this rule?');">
                                                            <input type="hidden" name="id" value="@rule.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>

                                                <!-- Edit Modal -->
                                                <div class="modal fade" id="editRandomModal@(rule.Id)" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Edit Random Delay Rule</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <form asp-action="UpdateRandomDelay" method="post">
                                                                <div class="modal-body">
                                                                    <input type="hidden" name="Id" value="@rule.Id" />
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Rule Name</label>
                                                                        <input type="text" name="Name" class="form-control" value="@rule.Name" required />
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">After Message Count</label>
                                                                        <input type="number" name="AfterMessageCount" class="form-control" value="@rule.AfterMessageCount" required min="1" />
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Pause Duration (minutes)</label>
                                                                        <input type="number" name="PauseDurationMinutes" class="form-control" value="@rule.PauseDurationMinutes" required min="1" />
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Random Variance (seconds)</label>
                                                                        <input type="number" name="RandomVarianceSeconds" class="form-control" value="@rule.RandomVarianceSeconds" min="0" max="60" />
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Priority</label>
                                                                        <input type="number" name="Priority" class="form-control" value="@rule.Priority" min="1" max="100" />
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Description</label>
                                                                        <textarea name="Description" class="form-control" rows="2">@rule.Description</textarea>
                                                                    </div>
                                                                    <div class="form-check">
                                                                        <input type="checkbox" name="IsActive" class="form-check-input" @(rule.IsActive ? "checked" : "") />
                                                                        <label class="form-check-label">Active</label>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No random delay rules configured yet.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Video Timing Tab -->
        <div class="tab-pane fade" id="video-timing" role="tabpanel">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Add Video Timing</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="CreateVideoTiming" method="post">
                                @Html.AntiForgeryToken()
                                <div class="mb-3">
                                    <label class="form-label">Configuration Name</label>
                                    <input type="text" name="Name" class="form-control" required placeholder="e.g., Default Video Timing" />
                                </div>

                                <h6 class="text-muted mt-3 mb-2">Before Upload</h6>
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label class="form-label">Min (seconds)</label>
                                        <input type="number" name="MinDelayBeforeUploadSeconds" class="form-control" required min="0" max="7200" value="5" />
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label class="form-label">Max (seconds)</label>
                                        <input type="number" name="MaxDelayBeforeUploadSeconds" class="form-control" required min="0" max="7200" value="15" />
                                    </div>
                                </div>

                                <h6 class="text-muted mt-3 mb-2">Upload Duration</h6>
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label class="form-label">Min (seconds)</label>
                                        <input type="number" name="MinUploadTimeSeconds" class="form-control" required min="0" max="7200" value="10" />
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label class="form-label">Max (seconds)</label>
                                        <input type="number" name="MaxUploadTimeSeconds" class="form-control" required min="0" max="7200" value="30" />
                                    </div>
                                </div>

                                <h6 class="text-muted mt-3 mb-2">After Upload</h6>
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label class="form-label">Min (seconds)</label>
                                        <input type="number" name="MinDelayAfterUploadSeconds" class="form-control" required min="0" max="7200" value="3" />
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label class="form-label">Max (seconds)</label>
                                        <input type="number" name="MaxDelayAfterUploadSeconds" class="form-control" required min="0" max="7200" value="8" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea name="Description" class="form-control" rows="2" placeholder="Optional description"></textarea>
                                </div>
                                <div class="form-check mb-3">
                                    <input type="hidden" name="IsActive" value="false" />
                                    <input type="checkbox" name="IsActive" class="form-check-input" value="true" checked />
                                    <label class="form-check-label">Active</label>
                                </div>
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-plus-circle me-2"></i>Create
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Video Timing Controls</h5>
                        </div>
                        <div class="card-body">
                            @if (videoTimingControls?.Any() == true)
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Before Upload</th>
                                                <th>Upload Time</th>
                                                <th>After Upload</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var control in videoTimingControls)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@control.Name</strong>
                                                        @if (!string.IsNullOrEmpty(control.Description))
                                                        {
                                                            <br/><small class="text-muted">@control.Description</small>
                                                        }
                                                    </td>
                                                    <td>@control.MinDelayBeforeUploadSeconds-@control.MaxDelayBeforeUploadSeconds s</td>
                                                    <td>@control.MinUploadTimeSeconds-@control.MaxUploadTimeSeconds s</td>
                                                    <td>@control.MinDelayAfterUploadSeconds-@control.MaxDelayAfterUploadSeconds s</td>
                                                    <td>
                                                        @if (control.IsActive)
                                                        {
                                                            <span class="badge bg-success">Active</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">Inactive</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editVideoModal@(control.Id)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <form asp-action="DeleteVideoTiming" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this timing control?');">
                                                            <input type="hidden" name="id" value="@control.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>

                                                <!-- Edit Modal -->
                                                <div class="modal fade" id="editVideoModal@(control.Id)" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Edit Video Timing</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <form asp-action="UpdateVideoTiming" method="post">
                                                                <div class="modal-body">
                                                                    <input type="hidden" name="Id" value="@control.Id" />
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Name</label>
                                                                        <input type="text" name="Name" class="form-control" value="@control.Name" required />
                                                                    </div>

                                                                    <h6 class="text-muted mt-3 mb-2">Before Upload</h6>
                                                                    <div class="row">
                                                                        <div class="col-6 mb-3">
                                                                            <label class="form-label">Min (seconds)</label>
                                                                            <input type="number" name="MinDelayBeforeUploadSeconds" class="form-control" value="@control.MinDelayBeforeUploadSeconds" required min="0" max="7200" />
                                                                        </div>
                                                                        <div class="col-6 mb-3">
                                                                            <label class="form-label">Max (seconds)</label>
                                                                            <input type="number" name="MaxDelayBeforeUploadSeconds" class="form-control" value="@control.MaxDelayBeforeUploadSeconds" required min="0" max="7200" />
                                                                        </div>
                                                                    </div>

                                                                    <h6 class="text-muted mt-3 mb-2">Upload Duration</h6>
                                                                    <div class="row">
                                                                        <div class="col-6 mb-3">
                                                                            <label class="form-label">Min (seconds)</label>
                                                                            <input type="number" name="MinUploadTimeSeconds" class="form-control" value="@control.MinUploadTimeSeconds" required min="0" max="7200" />
                                                                        </div>
                                                                        <div class="col-6 mb-3">
                                                                            <label class="form-label">Max (seconds)</label>
                                                                            <input type="number" name="MaxUploadTimeSeconds" class="form-control" value="@control.MaxUploadTimeSeconds" required min="0" max="7200" />
                                                                        </div>
                                                                    </div>

                                                                    <h6 class="text-muted mt-3 mb-2">After Upload</h6>
                                                                    <div class="row">
                                                                        <div class="col-6 mb-3">
                                                                            <label class="form-label">Min (seconds)</label>
                                                                            <input type="number" name="MinDelayAfterUploadSeconds" class="form-control" value="@control.MinDelayAfterUploadSeconds" required min="0" max="7200" />
                                                                        </div>
                                                                        <div class="col-6 mb-3">
                                                                            <label class="form-label">Max (seconds)</label>
                                                                            <input type="number" name="MaxDelayAfterUploadSeconds" class="form-control" value="@control.MaxDelayAfterUploadSeconds" required min="0" max="7200" />
                                                                        </div>
                                                                    </div>

                                                                    <div class="mb-3">
                                                                        <label class="form-label">Description</label>
