@model CampaignTemplate

@{
    ViewData["Title"] = "Campaign Template Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@Model.Name</h4>
                <div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                    <span class="badge bg-primary ms-1">@Model.Category</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Template Name:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.Name
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Category:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.Category
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Description:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model.Description
                        </div>
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Message Content:</strong>
                    </div>
                    <div class="col-sm-9">
                        <div class="border rounded p-3" style="background-color: #f8f9fa;">
                            @Html.Raw(Model.MessageContent?.Replace("\n", "<br>") ?? "No content")
                        </div>
                        <small class="text-muted">
                            Character count: @(Model.MessageContent?.Length ?? 0) / 2000
                        </small>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Image URL:</strong>
                        </div>
                        <div class="col-sm-9">
                            <a href="@Model.ImageUrl" target="_blank" class="text-break">@Model.ImageUrl</a>
                        </div>
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Status:</strong>
                    </div>
                    <div class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Created:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Last Updated:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.UpdatedAt.ToString("MMM dd, yyyy 'at' HH:mm")
                    </div>
                </div>

                <div class="mt-4">
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                    {
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-2"></i>Delete
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Message Preview</h6>
            </div>
            <div class="card-body">
                <div class="message-preview border rounded p-3" style="background-color: #e3f2fd; min-height: 200px;">
                    @if (!string.IsNullOrEmpty(Model.MessageContent))
                    {
                        @Html.Raw(Model.MessageContent.Replace("\n", "<br>"))
                    }
                    else
                    {
                        <em class="text-muted">No message content</em>
                    }
                </div>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mt-3">
                        <img src="@Model.ImageUrl" alt="Template Image" class="img-fluid rounded" style="max-height: 200px;">
                    </div>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Template Variables Used</h6>
            </div>
            <div class="card-body">
                @{
                    var variables = new[] { "{name}", "{company}", "{phone}", "{date}", "{time}", "{order_id}", "{delivery_date}", "{tracking_url}", "{expiry_date}", "{shop_url}", "{feedback_url}" };
                    var usedVariables = variables.Where(v => Model.MessageContent?.Contains(v) == true).ToList();
                }

                @if (usedVariables.Any())
                {
                    <ul class="list-unstyled">
                        @foreach (var variable in usedVariables)
                        {
                            <li><code>@variable</code></li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No variables used in this template</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Template</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the template "<strong>@Model.Name</strong>"?</p>
                    <p class="text-danger">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete Template</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}